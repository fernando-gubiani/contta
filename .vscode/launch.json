{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Iniciar Servidor e Abrir Navegador",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes"
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s"
            }
        }
    ]
}
